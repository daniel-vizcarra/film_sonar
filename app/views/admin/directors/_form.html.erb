<%= form_with(model: [:admin, @director], local: true) do |form| %>
  <% if @director.errors.any? %>
    <div style="color: red;">
      <h2><%= pluralize(@director.errors.count, "error") %> impidieron guardar este director:</h2>
      <ul>
        <% @director.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Nombre Completo" %><br>
    <%= form.text_field :name %>
  </div>

