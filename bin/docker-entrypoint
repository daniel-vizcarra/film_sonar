#!/bin/bash -e

# Enable jemalloc ... (mantén esta parte)
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

rm -f /rails/tmp/pids/server.pid

#!/bin/bash -e
# ... (jemalloc, rm pid) ...
echo "!!!! ENTRYPOINT: RESET DE BASE DE DATOS (SOLO ESTA VEZ) !!!!"
DISABLE_DATABASE_ENVIRONMENT_CHECK=1 bundle exec rails db:reset
echo "==> ENTRYPOINT: db:reset COMPLETADO."
echo "==> IMPORTANTE: ¡REVIERTE este entrypoint para el próximo deploy!"
# NO AÑADAS `exec "$@"` AQUÍ PARA ESTE SCRIPT DE RESET ÚNICO
# Queremos que el contenedor termine después del reset para evitar que Puma intente arrancar con una BD inestable.
exit 0 # Termina el script exitosamente