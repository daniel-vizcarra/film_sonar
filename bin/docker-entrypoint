#!/bin/bash -e

# Enable jemalloc ...
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

rm -f /rails/tmp/pids/server.pid

echo "==> FilmSonar Entrypoint: Ejecutando rails db:prepare..."
bundle exec rails db:prepare
echo "==> FilmSonar Entrypoint: rails db:prepare finalizado."

# Añadir ejecución explícita de db:seed
echo "==> FilmSonar Entrypoint: Ejecutando rails db:seed..."
bundle exec rails db:seed
echo "==> FilmSonar Entrypoint: rails db:seed finalizado."

exec "${@}"